{% extends 'base.html.twig' %}

{% block title %}Atexo Test Technique {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-4 text-center">
    <div class="row">
        <div class="card mb-4">
            <a class="btn btn-primary" href="{{ path("home_page") }}">Rejouer</a>
        </div>
    </div>

    <div class="jumbotron row pt-1 pb-1">
        <div class="row mb-2">
            <h5>Ordre alétoire des couleurs</h5>
        </div>
        <div class="row">
            {% for color in colors %}
                <div class="col-md-1">
                    <div class="card mb-4">
                        <img src="{{ asset('pictures/colors/' ~ color|lower ~ '.png' ) }}" class="picture_game">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="jumbotron row pt-1 pb-1">
        <div class="row mb-2">
            <h5>Ordre alétoire des valeurs</h5>
        </div>
        <div class="d-flex flex-row">
            {% for value in values %}
                <div class="card ml-2 mb-4">
                    <img src="{{ asset('pictures/values/' ~ value|lower ~ 'spades.png') }}" class="picture_game">
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="jumbotron row pt-1 pb-1">
        <div class="row mb-2">
            <h5>Main aléatoire</h5>
        </div>
        <div class="row">
            {% for card in unsortedCards %}
                <div class="col-md-1">
                    <div class="card mb-4">
                        <img src="{{ asset('pictures/cards/' ~ card.picture|lower ~ '.png') }}" class="picture_game">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="jumbotron row pt-1 pb-1">
        <div class="row mb-2">
            <h5>Main ordonnée</h5>
        </div>
        <div class="row">
            {% for card in sortedCards %}
                <div class="col-md-1">
                    <div class="card mb-4">
                        <img src="{{ asset('pictures/cards/' ~ card.picture|lower ~ '.png') }}" class="picture_game">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
